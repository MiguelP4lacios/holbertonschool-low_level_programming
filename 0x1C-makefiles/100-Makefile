# Usage:
# make        # compile all binary
## The all rule should recompile only the updated source files


CFLAGS = -Wall -Werror -Wextra -pedantic

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm

.PHONY: all clean oclean fclean re
all: m.h ${OBJ}
	${CC} ${OBJ} -o ${NAME}
clean:
	${RM} -f *~ ${NAME}
oclean:
	${RM} -f ${OBJ}

fclean: clean oclean

re: oclean all
