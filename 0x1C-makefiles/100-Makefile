# Usage:
# make        # compile all binary
## The all rule should recompile only the updated source files

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all
all: m.h ${OBJ}
	${CC} ${OBJ} -o ${NAME}
.PHONY: clean
clean:
	${RM} -f *~ ${NAME}
.PHONY: clean
oclean:
	${RM} -f ${OBJ}

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: oclean all